import java.util.Random;

/**
 *
 * @author sinhi155
 */
public class BlackjackHand {
    
    
    public int getCard(Deck obj) {
        int cardVal = 0;
        
        cardVal = obj.getCard();
        
        return cardVal;
    }
    public int hit(Deck obj) {
        int hitVal = 0;
        hitVal = obj.getCard();
        
        System.out.println("Card Value: " + hitVal);
        return hitVal;
    }
} 
